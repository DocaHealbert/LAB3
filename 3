#include<iostream>
#include<iomanip>
using namespace std;

int main(){
	
	const float PIE = 3.1416;
	float radius = 6;
	float area = 0;
	
	cout << "Enter any number as radius :" <<endl;
	cin >> radius;
	
	area = PIE * (radius * radius);
	
	cout << fixed << setprecision(2) << "Area of circle is " << area << endl;
	//fixed point-notation
	//setprecision for set output two decimal point
	
	return 0;
}
