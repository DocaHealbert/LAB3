#include<iostream>
#include<iomanip>
#include<math.h>
using namespace std;

int main(){
	
	const float PIE = 3.1416;
	float radius = 8;
	float area;
	
	//cout << "Enter any number as radius :" <<endl;
	//cin >> radius;
	
	area = PIE * pow(radius,2);
	
	cout << setiosflags(ios::fixed | ios::showpoint) << setprecision(2) << "Area of circle is " << area <<endl;
	//cout << fixed << setprecision(2) << "Area of circle is " << area << endl;
	//fixed point-notation
	//setprecision(2) for set output two decimal point
	
	return 0;
}
